<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circle="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_temperature_gradient"
        android:scaleType="centerCrop"/>

    <com.themindstudios.circlecontrolview.widget.CircleControlView
        android:id="@+id/temperature_cv_degree"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_btn_temperature"
        circle:minValue="0"
        circle:currentValue="333"
        circle:maxValue="360"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="choose the most\ncomfortable\ntemperature"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:textColor="@android:color/white"/>

</RelativeLayout>